@* ============================================ *@
@* Rapor/GenelGecKalanlar.cshtml *@

@model IEnumerable<PDKS.Business.DTOs.GecKalanlarRaporDTO>
@{
    ViewData["Title"] = "Genel Geç Kalanlar Raporu";
    var filtre = ViewBag.Filtre as PDKS.Business.DTOs.RaporFiltreDTO;
}

<div class="row mb-3">
    <div class="col-md-8">
        <form method="post" asp-action="GenelGecKalanlar" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Başlangıç Tarihi</label>
                <input type="date" name="BaslangicTarihi" class="form-control"
                       value="@(filtre?.BaslangicTarihi.ToString("yyyy-MM-dd") ?? DateTime.Today.AddDays(-7).ToString("yyyy-MM-dd"))">
            </div>
            <div class="col-md-4">
                <label class="form-label">Bitiş Tarihi</label>
                <input type="date" name="BitisTarihi" class="form-control"
                       value="@(filtre?.BitisTarihi.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))">
            </div>
            <div class="col-md-3">
                <label class="form-label">Departman</label>
                <select name="Departman" class="form-select" asp-items="ViewBag.Departmanlar">
                    <option value="">Tümü</option>
                </select>
            </div>
            <div class="col-md-1">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter"></i>
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Raporlar
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card">
        <div class="card-header bg-warning">
            <i class="fas fa-clock me-2"></i> Geç Kalanlar Raporu
            <span class="badge bg-dark ms-2">@Model.Count() Kayıt</span>
        </div>
        <div class="card-body">
            <!-- Summary -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-warning">
                        <div class="card-body text-center">
                            <h3>@Model.Count()</h3>
                            <small>Geç Kalma Sayısı</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-danger text-white">
                        <div class="card-body text-center">
                            <h3>@(Model.Sum(g => g.GecKalmaSuresi) / 60) saat</h3>
                            <small>Toplam Geç Kalma</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h3>@Model.Select(g => g.PersonelAdi).Distinct().Count()</h3>
                            <small>Farklı Personel</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Personel</th>
                            <th>Sicil No</th>
                            <th>Departman</th>
                            <th>Beklenen Giriş</th>
                            <th>Gerçek Giriş</th>
                            <th>Geç Kalma</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <i class="fas fa-user-circle text-warning me-2"></i>
                                    @item.PersonelAdi
                                </td>
                                <td><strong>@item.SicilNo</strong></td>
                                <td>@item.Departman</td>
                                <td>@item.BeklenenGiris</td>
                                <td>
                                    <span class="text-danger fw-bold">@item.GercekGiris</span>
                                </td>
                                <td>
                                    <span class="badge bg-warning fs-6">
                                        @item.GecKalmaSuresiText
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
            <h5>Harika!</h5>
            <p class="text-muted">Seçilen tarih aralığında geç kalma kaydı bulunmamaktadır.</p>
        </div>
    </div>
}