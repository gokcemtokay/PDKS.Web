@* ============================================ *@
@* Rapor/MesaiyeKalanlar.cshtml *@

@model IEnumerable<PDKS.Business.DTOs.FazlaMesaiRaporDTO>
@{
    ViewData["Title"] = "Mesaiye Kalanlar Raporu";
    var filtre = ViewBag.Filtre as PDKS.Business.DTOs.RaporFiltreDTO;
}

<div class="row mb-3">
    <div class="col-md-8">
        <form method="post" asp-action="MesaiyeKalanlar" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Başlangıç Tarihi</label>
                <input type="date" name="BaslangicTarihi" class="form-control"
                       value="@(filtre?.BaslangicTarihi.ToString("yyyy-MM-dd") ?? DateTime.Today.AddMonths(-1).ToString("yyyy-MM-dd"))">
            </div>
            <div class="col-md-4">
                <label class="form-label">Bitiş Tarihi</label>
                <input type="date" name="BitisTarihi" class="form-control"
                       value="@(filtre?.BitisTarihi.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))">
            </div>
            <div class="col-md-3">
                <label class="form-label">Departman</label>
                <select name="Departman" class="form-select" asp-items="ViewBag.Departmanlar">
                    <option value="">Tümü</option>
                </select>
            </div>
            <div class="col-md-1">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter"></i>
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Raporlar
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-business-time me-2"></i> Fazla Mesai / Mesaiye Kalanlar Raporu
            <span class="badge bg-light text-dark ms-2">@Model.Count() Kayıt</span>
        </div>
        <div class="card-body">
            <!-- Summary -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h3>@Model.Count()</h3>
                            <small>Toplam Kayıt</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h3>@(Model.Sum(f => f.FazlaMesaiSuresi) / 60) saat</h3>
                            <small>Toplam Fazla Mesai</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning">
                        <div class="card-body text-center">
                            <h3>@Model.Sum(f => f.FazlaMesaiUcreti).ToString("N0") ₺</h3>
                            <small>Toplam Ücret</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h3>@Model.Select(f => f.PersonelAdi).Distinct().Count()</h3>
                            <small>Farklı Personel</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Personel</th>
                            <th>Sicil No</th>
                            <th>Departman</th>
                            <th>Fazla Mesai Süresi</th>
                            <th>Fazla Mesai Ücreti</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(f => f.FazlaMesaiSuresi))
                        {
                            <tr>
                                <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <i class="fas fa-user-circle text-primary me-2"></i>
                                    @item.PersonelAdi
                                </td>
                                <td><strong>@item.SicilNo</strong></td>
                                <td>@item.Departman</td>
                                <td>
                                    <span class="badge bg-primary fs-6">
                                        @item.FazlaMesaiSuresiText
                                    </span>
                                </td>
                                <td>
                                    <span class="text-success fw-bold">
                                        @item.FazlaMesaiUcreti.ToString("N2") ₺
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-secondary">
                        <tr>
                            <th colspan="4">TOPLAM</th>
                            <th>
                                <span class="badge bg-primary fs-6">
                                    @(Model.Sum(f => f.FazlaMesaiSuresi) / 60) saat @(Model.Sum(f => f.FazlaMesaiSuresi) % 60) dk
                                </span>
                            </th>
                            <th>
                                <span class="text-success fw-bold">
                                    @Model.Sum(f => f.FazlaMesaiUcreti).ToString("N2") ₺
                                </span>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-info-circle fa-4x text-muted mb-3"></i>
            <h5>Fazla Mesai Kaydı Yok</h5>
            <p class="text-muted">Seçilen tarih aralığında fazla mesai kaydı bulunmamaktadır.</p>
        </div>
    </div>
}