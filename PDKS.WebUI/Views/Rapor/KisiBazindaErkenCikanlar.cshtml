@* ============================================ *@
@* Rapor/KisiBazindaErkenCikanlar.cshtml *@

@model PDKS.Business.DTOs.RaporFiltreDTO
@{
    ViewData["Title"] = "Kişi Bazında Erken Çıkanlar Raporu";
    var rapor = ViewBag.Rapor as List<PDKS.Business.DTOs.ErkenCikanlarRaporDTO>;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-user-clock text-info"></i>
                Kişi Bazında Erken Çıkanlar Raporu
            </h2>
            <p class="text-muted">Seçilen personelin erken çıkış detayları</p>
        </div>
    </div>

    <!-- Filtre Kartı -->
    <div class="card report-filter-card mb-4">
        <div class="card-body">
            <form asp-action="KisiBazindaErkenCikanlar" method="post">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-user me-1"></i> Personel
                        </label>
                        <select name="PersonelId" class="form-select" required>
                            <option value="">Personel Seçin</option>
                            @if (ViewBag.Personeller != null)
                            {
                                @foreach (var personel in ViewBag.Personeller)
                                {
                                    <option value="@personel.Value" selected="@(personel.Value == Model?.PersonelId?.ToString())">
                                        @personel.Text
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Başlangıç Tarihi
                        </label>
                        <input type="date" name="BaslangicTarihi" class="form-control"
                               value="@(Model?.BaslangicTarihi.ToString("yyyy-MM-dd") ?? DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd"))"
                               required />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Bitiş Tarihi
                        </label>
                        <input type="date" name="BitisTarihi" class="form-control"
                               value="@(Model?.BitisTarihi.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))"
                               required />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-info w-100">
                            <i class="fas fa-search me-2"></i> Raporu Getir
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (rapor != null && rapor.Any())
    {
        <!-- Özet Kartlar -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Toplam Erken Çıkış</div>
                    <div class="summary-value text-info">@rapor.Count</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Toplam Dakika</div>
                    <div class="summary-value text-danger">
                        @rapor.Sum(r => r.ErkenCikisSuresi) dk
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Ort. Erken Çıkış</div>
                    <div class="summary-value text-warning">
                        @Math.Round(rapor.Average(r => r.ErkenCikisSuresi), 1) dk
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">En Fazla Erken Çıkış</div>
                    <div class="summary-value text-primary">
                        @rapor.Max(r => r.ErkenCikisSuresi) dk
                    </div>
                </div>
            </div>
        </div>

        <!-- Tablo -->
        <div class="card">
            <div class="card-header bg-info text-white">
                <i class="fas fa-door-open me-2"></i> Erken Çıkış Detayları
                <span class="badge bg-dark ms-2">@rapor.Count Kayıt</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="raporTable">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Gün</th>
                                <th>Planlı Çıkış</th>
                                <th>Gerçek Çıkış</th>
                                <th>Erken Çıkış</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kayit in rapor)
                            {
                                <tr>
                                    <td>@kayit.Tarih.ToString("dd.MM.yyyy")</td>
                                    <td>@kayit.Tarih.ToString("dddd", new System.Globalization.CultureInfo("tr-TR"))</td>
                                    <td>
                                        <span class="badge bg-secondary">@kayit.BeklenenCikis</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@kayit.GercekCikis</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger">
                                            <i class="fas fa-exclamation-triangle"></i> @kayit.ErkenCikisSuresi dk
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning">Erken Çıkmış</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Export Buttons -->
        <div class="row mt-3">
            <div class="col-12 text-end">
                <button type="button" class="btn btn-success" onclick="exportToExcel()">
                    <i class="fas fa-file-excel me-2"></i>Excel'e Aktar
                </button>
                <button type="button" class="btn btn-danger" onclick="exportToPDF()">
                    <i class="fas fa-file-pdf me-2"></i>PDF'e Aktar
                </button>
            </div>
        </div>
    }
    else if (Model != null && Model.PersonelId.HasValue)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Seçilen personelin bu tarih aralığında erken çıkış kaydı bulunamadı.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#raporTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json' },
                order: [[0, 'desc']]
            });
        });

        function exportToExcel() {
            const wb = XLSX.utils.table_to_book(document.getElementById('raporTable'));
            XLSX.writeFile(wb, 'KisiBazindaErkenCikanlar_' + new Date().toISOString().slice(0,10) + '.xlsx');
        }

        function exportToPDF() {
            window.print();
        }
    </script>
}