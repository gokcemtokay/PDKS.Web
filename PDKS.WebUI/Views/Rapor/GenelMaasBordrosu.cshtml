@* ============================================ *@
@* Rapor/GenelMaasBordrosu.cshtml *@

@model PDKS.Business.DTOs.RaporFiltreDTO
@{
    ViewData["Title"] = "Genel Maaş Bordrosu";
    var rapor = ViewBag.Rapor as List<PDKS.Business.DTOs.MaasBordrosuDTO>;
}

<div class="row mb-3">
    <div class="col-md-8">
        <form method="post" asp-action="GenelMaasBordrosu" class="row g-3">
            <div class="col-md-5">
                <label class="form-label">Yıl</label>
                <select name="Yil" class="form-select" required>
                    <option value="">Yıl Seçiniz</option>
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                    {
                        <option value="@y" selected="@(Model?.Yil == y)">@y</option>
                    }
                </select>
            </div>
            <div class="col-md-5">
                <label class="form-label">Ay</label>
                <select name="Ay" class="form-select" required>
                    <option value="">Ay Seçiniz</option>
                    @for (int m = 1; m <= 12; m++)
                    {
                        <option value="@m" selected="@(Model?.Ay == m)">@m</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter"></i> Görüntüle
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Raporlar
        </a>
    </div>
</div>

@if (rapor != null && rapor.Any())
{
    <div class="card">
        <div class="card-header bg-success text-white">
            <i class="fas fa-file-invoice-dollar me-2"></i> Genel Maaş Bordrosu
            <span class="badge bg-light text-dark ms-2">@Model?.Ay/@Model?.Yil</span>
        </div>
        <div class="card-body">
            <!-- Summary Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h4>@rapor.Count()</h4>
                            <small>Personel Sayısı</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h4>@rapor.Sum(r => r.ToplamBrut).ToString("C")</h4>
                            <small>Toplam Brüt</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <h4>@rapor.Sum(r => r.SGKKesintisi + r.GelirVergisi + r.AvansKesintisi).ToString("C")</h4>
                            <small>Toplam Kesinti</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h4>@rapor.Sum(r => r.NetMaas).ToString("C")</h4>
                            <small>Toplam Net</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-sm" id="bordroTable">
                    <thead>
                        <tr>
                            <th>Sicil No</th>
                            <th>Personel</th>
                            <th>Departman</th>
                            <th>Brüt Maaş</th>
                            <th>SGK</th>
                            <th>Gelir Vergisi</th>
                            <th>Avans</th>
                            <th>Primler</th>
                            <th>Net Maaş</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in rapor.OrderBy(m => m.PersonelAdi))
                        {
                            <tr>
                                <td><strong>@item.SicilNo</strong></td>
                                <td>
                                    <i class="fas fa-user-circle text-primary me-1"></i>
                                    @item.PersonelAdi
                                </td>
                                <td>@item.Departman</td>
                                <td>@item.BrutMaas.ToString("C")</td>
                                <td><span class="text-danger">@item.SGKKesintisi.ToString("C")</span></td>
                                <td><span class="text-danger">@item.GelirVergisi.ToString("C")</span></td>
                                <td><span class="text-danger">@item.AvansKesintisi.ToString("C")</span></td>
                                <td><span class="text-success">@item.Primler.ToString("C")</span></td>
                                <td><strong class="text-primary">@item.NetMaas.ToString("C")</strong></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-active">
                            <td colspan="3"><strong>TOPLAM:</strong></td>
                            <td><strong>@rapor.Sum(r => r.BrutMaas).ToString("C")</strong></td>
                            <td><strong class="text-danger">@rapor.Sum(r => r.SGKKesintisi).ToString("C")</strong></td>
                            <td><strong class="text-danger">@rapor.Sum(r => r.GelirVergisi).ToString("C")</strong></td>
                            <td><strong class="text-danger">@rapor.Sum(r => r.AvansKesintisi).ToString("C")</strong></td>
                            <td><strong class="text-success">@rapor.Sum(r => r.Primler).ToString("C")</strong></td>
                            <td><strong class="text-primary">@rapor.Sum(r => r.NetMaas).ToString("C")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- Export Buttons -->
    <div class="row mt-3">
        <div class="col-12 text-end">
            <button type="button" class="btn btn-success" onclick="exportToExcel()">
                <i class="fas fa-file-excel me-2"></i>Excel'e Aktar
            </button>
        </div>
    </div>
}
else if (Model != null && Model.Yil.HasValue && Model.Ay.HasValue)
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> Seçilen dönem için bordro kaydı bulunamadı.
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Lütfen yıl ve ay seçerek bordro raporunu görüntüleyin.
    </div>
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#bordroTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json' },
                paging: false
            });
        });

        function exportToExcel() {
            const wb = XLSX.utils.table_to_book(document.getElementById('bordroTable'));
            XLSX.writeFile(wb, 'MaasBordrosu_' + new Date().toISOString().slice(0,10) + '.xlsx');
        }
    </script>
}