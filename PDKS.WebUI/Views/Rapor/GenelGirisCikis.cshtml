@* ============================================ *@
@* Rapor/GenelGirisCikis.cshtml *@

@model PDKS.Business.DTOs.RaporFiltreDTO
@{
    ViewData["Title"] = "Genel Giriş-Çıkış Raporu";
    var rapor = ViewBag.Rapor as List<PDKS.Business.DTOs.GirisCikisRaporDTO>;
}

<div class="row mb-3">
    <div class="col-md-8">
        <form method="post" asp-action="GenelGirisCikis" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Başlangıç Tarihi</label>
                <input type="date" name="BaslangicTarihi" class="form-control"
                       value="@(Model?.BaslangicTarihi.ToString("yyyy-MM-dd") ?? DateTime.Today.AddMonths(-1).ToString("yyyy-MM-dd"))">
            </div>
            <div class="col-md-4">
                <label class="form-label">Bitiş Tarihi</label>
                <input type="date" name="BitisTarihi" class="form-control"
                       value="@(Model?.BitisTarihi.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))">
            </div>
            <div class="col-md-3">
                <label class="form-label">Departman</label>
                <select name="Departman" class="form-select" asp-items="ViewBag.Departmanlar">
                    <option value="">Tümü</option>
                </select>
            </div>
            <div class="col-md-1">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter"></i>
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-4 text-end">
        @if (rapor != null && rapor.Any())
        {
            <label class="form-label">&nbsp;</label>
            <form method="post" asp-action="ExportGirisCikisExcel">
                <input type="hidden" name="BaslangicTarihi" value="@Model?.BaslangicTarihi" />
                <input type="hidden" name="BitisTarihi" value="@Model?.BitisTarihi" />
                <input type="hidden" name="Departman" value="@Model?.Departman" />
                <button type="submit" class="btn btn-success d-block">
                    <i class="fas fa-file-excel"></i> Excel'e Aktar
                </button>
            </form>
        }
    </div>
</div>

@if (rapor != null && rapor.Any())
{
    <div class="card">
        <div class="card-header">
            <i class="fas fa-chart-line me-2"></i> Genel Giriş-Çıkış Raporu
            <span class="badge bg-light text-dark ms-2">@rapor.Count() Kayıt</span>
        </div>
        <div class="card-body">
            <!-- Summary Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h3>@rapor.Count()</h3>
                            <small>Toplam Kayıt</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h3>@rapor.Count(r => r.Durum == "Normal")</h3>
                            <small>Normal Giriş</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <h3>@rapor.Count(r => r.GecKalma > 0)</h3>
                            <small>Geç Kalma</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h3>@rapor.Count(r => r.FazlaMesaiDakika > 0)</h3>
                            <small>Fazla Mesai</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Personel</th>
                            <th>Sicil No</th>
                            <th>Departman</th>
                            <th>Giriş</th>
                            <th>Çıkış</th>
                            <th>Çalışma</th>
                            <th>Geç Kalma</th>
                            <th>Erken Çıkış</th>
                            <th>Fazla Mesai</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in rapor)
                        {
                            <tr>
                                <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                                <td>@item.PersonelAdi</td>
                                <td>@item.SicilNo</td>
                                <td>@item.Departman</td>
                                <td>@item.GirisSaati</td>
                                <td>@item.CikisSaati</td>
                                <td>@item.ToplamCalismaSuresi</td>
                                <td>
                                    @if (item.GecKalma > 0)
                                    {
                                        <span class="badge bg-warning">@item.GecKalma dk</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.ErkenCikis > 0)
                                    {
                                        <span class="badge bg-danger">@item.ErkenCikis dk</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.FazlaMesaiDakika > 0)
                                    {
                                        <span class="badge bg-success">@item.FazlaMesaiDakika dk</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Durum == "Normal")
                                    {
                                        <span class="badge bg-success">Normal</span>
                                    }
                                    else if (item.Durum == "Geç Kalma")
                                    {
                                        <span class="badge bg-warning">Geç</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@item.Durum</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Lütfen rapor kriterlerini seçip "Filtrele" butonuna tıklayın.
    </div>
}