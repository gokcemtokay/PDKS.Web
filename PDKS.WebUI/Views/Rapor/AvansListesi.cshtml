@* ============================================ *@
@* Rapor/AvansListesi.cshtml *@

@model PDKS.Business.DTOs.RaporFiltreDTO
@{
    ViewData["Title"] = "Avans Listesi";
    var rapor = ViewBag.Rapor as List<PDKS.Business.DTOs.AvansListDTO>;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-hand-holding-usd text-warning"></i>
                Avans Listesi
            </h2>
            <p class="text-muted">Verilen avansların listesi</p>
        </div>
    </div>

    <!-- Filtre Kartı -->
    <div class="card report-filter-card mb-4">
        <div class="card-body">
            <form asp-action="AvansListesi" method="post">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Başlangıç Tarihi
                        </label>
                        <input type="date" name="BaslangicTarihi" class="form-control"
                               value="@(Model?.BaslangicTarihi.ToString("yyyy-MM-dd") ?? DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd"))"
                               required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Bitiş Tarihi
                        </label>
                        <input type="date" name="BitisTarihi" class="form-control"
                               value="@(Model?.BitisTarihi.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))"
                               required />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="fas fa-search me-2"></i> Raporu Getir
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (rapor != null && rapor.Any())
    {
        <!-- Özet Kartlar -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Toplam Avans</div>
                    <div class="summary-value text-warning">@rapor.Count</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Toplam Tutar</div>
                    <div class="summary-value text-danger">
                        @rapor.Sum(r => r.Tutar).ToString("C")
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Ödenen</div>
                    <div class="summary-value text-success">
                        @rapor.Count(r => r.Durum == "Ödendi")
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Bekleyen</div>
                    <div class="summary-value text-info">
                        @rapor.Count(r => r.Durum == "Beklemede")
                    </div>
                </div>
            </div>
        </div>

        <!-- Tablo -->
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <i class="fas fa-hand-holding-usd me-2"></i> Avans Detayları
                <span class="badge bg-dark ms-2">@rapor.Count Kayıt</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="raporTable">
                        <thead>
                            <tr>
                                <th>Personel</th>
                                <th>Sicil No</th>
                                <th>Tutar</th>
                                <th>Talep Tarihi</th>
                                <th>Ödeme Tarihi</th>
                                <th>Durum</th>
                                <th>Onaylayan</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kayit in rapor)
                            {
                                <tr>
                                    <td>
                                        <i class="fas fa-user-circle text-warning me-1"></i>
                                        @kayit.PersonelAdi
                                    </td>
                                    <td><strong>@kayit.SicilNo</strong></td>
                                    <td>
                                        <strong class="text-danger">@kayit.Tutar.ToString("C")</strong>
                                    </td>
                                    <td>@kayit.TalepTarihi.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        @if (kayit.OdemeTarihi.HasValue)
                                        {
                                            <span class="badge bg-success">
                                                @kayit.OdemeTarihi.Value.ToString("dd.MM.yyyy")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (kayit.Durum == "Ödendi")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Ödendi
                                            </span>
                                        }
                                        else if (kayit.Durum == "Beklemede")
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> Bekliyor
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle"></i> İptal
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(kayit.OnaylayanAdi))
                                        {
                                            <small class="text-muted">@kayit.OnaylayanAdi</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(kayit.Aciklama))
                                        {
                                            <small class="text-muted">@kayit.Aciklama</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="2"><strong>TOPLAM:</strong></td>
                                <td><strong class="text-danger">@rapor.Sum(r => r.Tutar).ToString("C")</strong></td>
                                <td colspan="5"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Export Buttons -->
        <div class="row mt-3">
            <div class="col-12 text-end">
                <button type="button" class="btn btn-success" onclick="exportToExcel()">
                    <i class="fas fa-file-excel me-2"></i>Excel'e Aktar
                </button>
                <button type="button" class="btn btn-danger" onclick="exportToPDF()">
                    <i class="fas fa-file-pdf me-2"></i>PDF'e Aktar
                </button>
            </div>
        </div>
    }
    else if (Model != null && Model.BaslangicTarihi != DateTime.MinValue)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Seçilen tarih aralığında avans kaydı bulunamadı.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#raporTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json' },
                order: [[3, 'desc']]
            });
        });

        function exportToExcel() {
            const wb = XLSX.utils.table_to_book(document.getElementById('raporTable'));
            XLSX.writeFile(wb, 'AvansListesi_' + new Date().toISOString().slice(0,10) + '.xlsx');
        }

        function exportToPDF() {
            window.print();
        }
    </script>
}