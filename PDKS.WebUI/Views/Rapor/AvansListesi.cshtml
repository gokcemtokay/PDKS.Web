@model List<PDKS.Business.DTOs.AvansListDTO>
@{
    ViewData["Title"] = "Avans Listesi";
    var filtre = ViewBag.Filtre as PDKS.Business.DTOs.RaporFiltreDTO;
}

<div class="container-fluid">
    <!-- Başlık -->
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-hand-holding-usd text-warning"></i>
                Avans Listesi Raporu
            </h2>
            <p class="text-muted">Personellere verilen avansların detaylı listesi</p>
        </div>
    </div>

    <!-- Filtre Kartı -->
    <div class="card report-filter-card mb-4">
        <div class="card-body">
            <form asp-action="AvansListesi" method="post">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Başlangıç Tarihi
                        </label>
                        <input type="date" name="BaslangicTarihi" class="form-control"
                               value="@(filtre?.BaslangicTarihi.ToString("yyyy-MM-dd") ?? DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd"))"
                               required />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Bitiş Tarihi
                        </label>
                        <input type="date" name="BitisTarihi" class="form-control"
                               value="@(filtre?.BitisTarihi.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))"
                               required />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-filter me-1"></i> Durum
                        </label>
                        <select name="Durum" class="form-select">
                            <option value="">Tümü</option>
                            <option value="Beklemede">Beklemede</option>
                            <option value="Onaylandı">Onaylandı</option>
                            <option value="Reddedildi">Reddedildi</option>
                            <option value="Ödendi">Ödendi</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-light w-100">
                            <i class="fas fa-search me-2"></i> Raporu Getir
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Özet Kartlar -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Toplam Avans</div>
                    <div class="summary-value text-primary">@Model.Count</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Toplam Tutar</div>
                    <div class="summary-value text-success">
                        @Model.Sum(a => a.Tutar).ToString("N2") ₺
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Onaylanan</div>
                    <div class="summary-value text-info">
                        @Model.Count(a => a.Durum == "Onaylandı" || a.Durum == "Ödendi")
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Bekleyen</div>
                    <div class="summary-value text-warning">
                        @Model.Count(a => a.Durum == "Beklemede")
                    </div>
                </div>
            </div>
        </div>

        <!-- Export Butonları -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-excel" onclick="exportToExcel()">
                        <i class="fas fa-file-excel me-2"></i> Excel'e Aktar
                    </button>
                    <button type="button" class="btn btn-pdf" onclick="exportToPDF()">
                        <i class="fas fa-file-pdf me-2"></i> PDF'e Aktar
                    </button>
                    <button type="button" class="btn btn-print" onclick="window.print()">
                        <i class="fas fa-print me-2"></i> Yazdır
                    </button>
                    <button type="button" class="btn btn-email" data-bs-toggle="modal" data-bs-target="#emailModal">
                        <i class="fas fa-envelope me-2"></i> E-posta Gönder
                    </button>
                </div>
            </div>
        </div>

        <!-- Rapor Tablosu -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table report-table table-hover" id="avansTable">
                        <thead>
                            <tr>
                                <th>Sicil No</th>
                                <th>Personel</th>
                                <th>Tutar</th>
                                <th>Talep Tarihi</th>
                                <th>Ödeme Tarihi</th>
                                <th>Durum</th>
                                <th>Onaylayan</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var avans in Model)
                            {
                                <tr>
                                    <td><strong>@avans.SicilNo</strong></td>
                                    <td>@avans.PersonelAdi</td>
                                    <td><strong class="text-success">@avans.Tutar.ToString("N2") ₺</strong></td>
                                    <td>@avans.TalepTarihi.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        @if (avans.OdemeTarihi.HasValue)
                                        {
                                            @avans.OdemeTarihi.Value.ToString("dd.MM.yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (avans.Durum == "Ödendi")
                                        {
                                            <span class="badge bg-success">@avans.Durum</span>
                                        }
                                        else if (avans.Durum == "Onaylandı")
                                        {
                                            <span class="badge bg-info">@avans.Durum</span>
                                        }
                                        else if (avans.Durum == "Beklemede")
                                        {
                                            <span class="badge bg-warning">@avans.Durum</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@avans.Durum</span>
                                        }
                                    </td>
                                    <td>@(avans.OnaylayanAdi ?? "-")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(avans.Aciklama))
                                        {
                                            <small>@avans.Aciklama</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <th colspan="2" class="text-end">GENEL TOPLAM:</th>
                                <th class="text-success">@Model.Sum(a => a.Tutar).ToString("N2") ₺</th>
                                <th colspan="5"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Seçilen kriterlere uygun avans kaydı bulunamadı. Lütfen filtreleri değiştirerek tekrar deneyin.
        </div>
    }
</div>

<!-- Email Modal -->
<div class="modal fade" id="emailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Raporu E-posta ile Gönder</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">E-posta Adresi</label>
                    <input type="email" class="form-control" id="emailAddress" placeholder="ornek@sirket.com">
                </div>
                <div class="mb-3">
                    <label class="form-label">Mesaj (Opsiyonel)</label>
                    <textarea class="form-control" rows="3" id="emailMessage"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="sendEmail()">Gönder</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#avansTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json'
                },
                dom: 'Bfrtip',
                pageLength: 25,
                order: [[3, 'desc']]
            });
        });

        function exportToExcel() {
            const table = document.getElementById('avansTable');
            const wb = XLSX.utils.table_to_book(table, {sheet: "Avans Listesi"});
            XLSX.writeFile(wb, 'AvansListesi_' + new Date().toISOString().slice(0,10) + '.xlsx');
        }

        function exportToPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF('l', 'mm', 'a4');

            doc.setFont('helvetica', 'bold');
            doc.setFontSize(16);
            doc.text('Avans Listesi Raporu', 14, 15);

            doc.autoTable({
                html: '#avansTable',
                startY: 25,
                theme: 'grid',
                styles: { font: 'helvetica', fontSize: 8 },
                headStyles: { fillColor: [102, 126, 234] }
            });

            doc.save('AvansListesi_' + new Date().toISOString().slice(0,10) + '.pdf');
        }

        function sendEmail() {
            const email = document.getElementById('emailAddress').value;
            const message = document.getElementById('emailMessage').value;

            if (!email) {
                alert('Lütfen e-posta adresi girin');
                return;
            }

            // AJAX ile backend'e gönderme (implementasyon gerekli)
            alert('E-posta gönderme özelliği yakında eklenecek');
            $('#emailModal').modal('hide');
        }
    </script>
}

<style>
    @@media print {
        .report-filter-card, .btn-group, .sidebar, .navbar {
            display: none !important;
        }

        .container-fluid {
            padding: 0;
        }
    }
</style>