@* ============================================ *@
@* Rapor/IseGirenler.cshtml *@

@model PDKS.Business.DTOs.RaporFiltreDTO
@{
    ViewData["Title"] = "İşe Girenler Raporu";
    var rapor = ViewBag.Rapor as List<PDKS.Business.DTOs.IseGirenlerRaporDTO>;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-user-plus text-success"></i>
                İşe Girenler Raporu
            </h2>
            <p class="text-muted">Yeni işe başlayan personellerin raporu</p>
        </div>
    </div>

    <!-- Filtre Kartı -->
    <div class="card report-filter-card mb-4">
        <div class="card-body">
            <form asp-action="IseGirenler" method="post">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Başlangıç Tarihi
                        </label>
                        <input type="date" name="BaslangicTarihi" class="form-control"
                               value="@(Model?.BaslangicTarihi.ToString("yyyy-MM-dd") ?? DateTime.Now.AddMonths(-3).ToString("yyyy-MM-dd"))"
                               required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Bitiş Tarihi
                        </label>
                        <input type="date" name="BitisTarihi" class="form-control"
                               value="@(Model?.BitisTarihi.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))"
                               required />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-search me-2"></i> Raporu Getir
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (rapor != null && rapor.Any())
    {
        <!-- Özet Kartlar -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="report-summary-card">
                    <div class="summary-label">Toplam İşe Giren</div>
                    <div class="summary-value text-success">@rapor.Count</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="report-summary-card">
                    <div class="summary-label">Bu Ay</div>
                    <div class="summary-value text-info">
                        @rapor.Count(r => r.GirisTarihi.Month == DateTime.Now.Month)
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="report-summary-card">
                    <div class="summary-label">Bu Hafta</div>
                    <div class="summary-value text-primary">
                        @rapor.Count(r => (DateTime.Now - r.GirisTarihi).TotalDays <= 7)
                    </div>
                </div>
            </div>
        </div>

        <!-- Tablo -->
        <div class="card">
            <div class="card-header bg-success text-white">
                <i class="fas fa-user-plus me-2"></i> İşe Giren Personeller
                <span class="badge bg-light text-dark ms-2">@rapor.Count Kayıt</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="raporTable">
                        <thead>
                            <tr>
                                <th>Sicil No</th>
                                <th>Ad Soyad</th>
                                <th>Departman</th>
                                <th>Görev</th>
                                <th>İşe Başlama</th>
                                <th>Telefon</th>
                                <th>Email</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kayit in rapor)
                            {
                                <tr>
                                    <td><strong>@kayit.SicilNo</strong></td>
                                    <td>
                                        <i class="fas fa-user-circle text-success me-1"></i>
                                        @kayit.AdSoyad
                                    </td>
                                    <td>@kayit.Departman</td>
                                    <td>@kayit.Gorev</td>
                                    <td>
                                        <span class="badge bg-success">
                                            @kayit.GirisTarihi.ToString("dd.MM.yyyy")
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(kayit.Telefon))
                                        {
                                            <a href="tel:@kayit.Telefon" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-phone"></i> @kayit.Telefon
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(kayit.Email))
                                        {
                                            <small>@kayit.Email</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var calismaGunu = (DateTime.Now - kayit.GirisTarihi).Days;
                                        }
                                        @if (calismaGunu < 30)
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-star"></i> Yeni (@calismaGunu gün)
                                            </span>
                                        }
                                        else if (calismaGunu < 90)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fas fa-clock"></i> Deneme Süresi
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Aktif
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Export Buttons -->
        <div class="row mt-3">
            <div class="col-12 text-end">
                <button type="button" class="btn btn-success" onclick="exportToExcel()">
                    <i class="fas fa-file-excel me-2"></i>Excel'e Aktar
                </button>
                <button type="button" class="btn btn-danger" onclick="exportToPDF()">
                    <i class="fas fa-file-pdf me-2"></i>PDF'e Aktar
                </button>
            </div>
        </div>
    }
    else if (Model != null && Model.BaslangicTarihi != DateTime.MinValue)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Seçilen tarih aralığında işe giren personel bulunamadı.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#raporTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json' },
                order: [[4, 'desc']]
            });
        });

        function exportToExcel() {
            const wb = XLSX.utils.table_to_book(document.getElementById('raporTable'));
            XLSX.writeFile(wb, 'IseGirenler_' + new Date().toISOString().slice(0,10) + '.xlsx');
        }

        function exportToPDF() {
            window.print();
        }
    </script>
}