@* ============================================ *@
@* Rapor/PrimListesi.cshtml *@

@model PDKS.Business.DTOs.RaporFiltreDTO
@{
    ViewData["Title"] = "Prim Listesi";
    var rapor = ViewBag.Rapor as List<PDKS.Business.DTOs.PrimListDTO>;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-certificate text-primary"></i>
                Prim Listesi
            </h2>
            <p class="text-muted">Ödenen primlerin listesi</p>
        </div>
    </div>

    <!-- Filtre Kartı -->
    <div class="card report-filter-card mb-4">
        <div class="card-body">
            <form asp-action="PrimListesi" method="post">
                <div class="row g-3 align-items-end">
                    <div class="col-md-5">
                        <label class="form-label">
                            <i class="fas fa-calendar me-1"></i> Yıl
                        </label>
                        <select name="Yil" class="form-select" required>
                            <option value="">Yıl Seçiniz</option>
                            @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                            {
                                <option value="@y" selected="@(Model?.Yil == y)">@y</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Ay
                        </label>
                        <select name="Ay" class="form-select" required>
                            <option value="">Ay Seçiniz</option>
                            @for (int m = 1; m <= 12; m++)
                            {
                                <option value="@m" selected="@(Model?.Ay == m)">@m</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-2"></i> Getir
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (rapor != null && rapor.Any())
    {
        <!-- Özet Kartlar -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Toplam Prim Sayısı</div>
                    <div class="summary-value text-primary">@rapor.Count</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Toplam Tutar</div>
                    <div class="summary-value text-success">
                        @rapor.Sum(r => r.Tutar).ToString("C")
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">Ortalama Prim</div>
                    <div class="summary-value text-info">
                        @rapor.Average(r => r.Tutar).ToString("C")
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card">
                    <div class="summary-label">En Yüksek Prim</div>
                    <div class="summary-value text-warning">
                        @rapor.Max(r => r.Tutar).ToString("C")
                    </div>
                </div>
            </div>
        </div>

        <!-- Tablo -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-certificate me-2"></i> Prim Detayları
                <span class="badge bg-light text-dark ms-2">@Model?.Ay/@Model?.Yil</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="raporTable">
                        <thead>
                            <tr>
                                <th>Personel</th>
                                <th>Sicil No</th>
                                <th>Dönem</th>
                                <th>Prim Tipi</th>
                                <th>Tutar</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kayit in rapor.OrderByDescending(r => r.Tutar))
                            {
                                <tr>
                                    <td>
                                        <i class="fas fa-user-circle text-primary me-1"></i>
                                        @kayit.PersonelAdi
                                    </td>
                                    <td><strong>@kayit.SicilNo</strong></td>
                                    <td>
                                        <span class="badge bg-secondary">@kayit.Donem</span>
                                    </td>
                                    <td>
                                        @if (kayit.PrimTipi == "Performans")
                                        {
                                            <span class="badge bg-success">@kayit.PrimTipi</span>
                                        }
                                        else if (kayit.PrimTipi == "Satış")
                                        {
                                            <span class="badge bg-info">@kayit.PrimTipi</span>
                                        }
                                        else if (kayit.PrimTipi == "Üretim")
                                        {
                                            <span class="badge bg-warning">@kayit.PrimTipi</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">@kayit.PrimTipi</span>
                                        }
                                    </td>
                                    <td>
                                        <strong class="text-success">@kayit.Tutar.ToString("C")</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(kayit.Aciklama))
                                        {
                                            <small class="text-muted">@kayit.Aciklama</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="4"><strong>TOPLAM:</strong></td>
                                <td><strong class="text-success">@rapor.Sum(r => r.Tutar).ToString("C")</strong></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Export Buttons -->
        <div class="row mt-3">
            <div class="col-12 text-end">
                <button type="button" class="btn btn-success" onclick="exportToExcel()">
                    <i class="fas fa-file-excel me-2"></i>Excel'e Aktar
                </button>
                <button type="button" class="btn btn-danger" onclick="exportToPDF()">
                    <i class="fas fa-file-pdf me-2"></i>PDF'e Aktar
                </button>
            </div>
        </div>
    }
    else if (Model != null && Model.Yil.HasValue && Model.Ay.HasValue)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Seçilen dönem için prim kaydı bulunamadı.
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Lütfen yıl ve ay seçerek prim listesini görüntüleyin.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#raporTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json' },
                paging: false
            });
        });

        function exportToExcel() {
            const wb = XLSX.utils.table_to_book(document.getElementById('raporTable'));
            XLSX.writeFile(wb, 'PrimListesi_' + new Date().toISOString().slice(0,10) + '.xlsx');
        }

        function exportToPDF() {
            window.print();
        }
    </script>
}