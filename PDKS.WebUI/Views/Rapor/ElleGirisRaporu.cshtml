@model List<PDKS.Business.DTOs.ElleGirisRaporDTO>
@{
    ViewData["Title"] = "Elle Giriş Raporu";
    var filtre = ViewBag.Filtre as PDKS.Business.DTOs.RaporFiltreDTO;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-hand-paper text-info"></i>
                Elle Giriş Raporu
            </h2>
            <p class="text-muted">Manuel olarak sisteme girilen kayıtların listesi</p>
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Önemli:</strong> Bu rapor, sistem yöneticileri tarafından elle girilen tüm kayıtları gösterir.
                Veri bütünlüğü için bu kayıtlar özel olarak işaretlenir.
            </div>
        </div>
    </div>

    <!-- Filtre -->
    <div class="card report-filter-card mb-4">
        <div class="card-body">
            <form asp-action="ElleGirisRaporu" method="post">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Başlangıç Tarihi
                        </label>
                        <input type="date" name="BaslangicTarihi" class="form-control"
                               value="@(filtre?.BaslangicTarihi.ToString("yyyy-MM-dd") ?? DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd"))"
                               required />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Bitiş Tarihi
                        </label>
                        <input type="date" name="BitisTarihi" class="form-control"
                               value="@(filtre?.BitisTarihi.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))"
                               required />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-user me-1"></i> Giriş Yapan Kullanıcı
                        </label>
                        <select name="KullaniciId" class="form-select">
                            <option value="">Tümü</option>
                            @if (ViewBag.Kullanicilar != null)
                            {
                                @foreach (var kullanici in ViewBag.Kullanicilar)
                                {
                                    <option value="@kullanici.Value">@kullanici.Text</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-light w-100">
                            <i class="fas fa-search me-2"></i> Raporu Getir
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Özet Kartlar -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="report-summary-card border-start border-warning border-5">
                    <div class="summary-label">Toplam Elle Giriş</div>
                    <div class="summary-value text-warning">@Model.Count</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card border-start border-info border-5">
                    <div class="summary-label">Farklı Personel</div>
                    <div class="summary-value text-info">
                        @Model.Select(e => e.PersonelId).Distinct().Count()
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card border-start border-primary border-5">
                    <div class="summary-label">Farklı Kullanıcı</div>
                    <div class="summary-value text-primary">
                        @Model.Select(e => e.GirisYapanKullaniciId).Distinct().Count()
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="report-summary-card border-start border-success border-5">
                    <div class="summary-label">Onaylanmış</div>
                    <div class="summary-value text-success">
                        @Model.Count(e => e.OnayDurumu == "Onaylandı")
                    </div>
                </div>
            </div>
        </div>

        <!-- Export Butonları -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="btn-group">
                    <button class="btn btn-excel" onclick="exportToExcel()">
                        <i class="fas fa-file-excel me-2"></i> Excel'e Aktar
                    </button>
                    <button class="btn btn-pdf" onclick="exportToPDF()">
                        <i class="fas fa-file-pdf me-2"></i> PDF'e Aktar
                    </button>
                    <button class="btn btn-print" onclick="window.print()">
                        <i class="fas fa-print me-2"></i> Yazdır
                    </button>
                    <button class="btn btn-email" data-bs-toggle="modal" data-bs-target="#emailModal">
                        <i class="fas fa-envelope me-2"></i> E-posta Gönder
                    </button>
                </div>
            </div>
        </div>

        <!-- Tablo -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table report-table table-hover" id="elleGirisTable">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Sicil No</th>
                                <th>Personel</th>
                                <th>Departman</th>
                                <th>Giriş</th>
                                <th>Çıkış</th>
                                <th>Giriş Yapan</th>
                                <th>Giriş Zamanı</th>
                                <th>Sebep</th>
                                <th>Onay Durumu</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kayit in Model)
                            {
                                <tr class="@(kayit.OnayDurumu == "Beklemede" ? "table-warning" : "")">
                                    <td>@kayit.Tarih.ToString("dd.MM.yyyy")</td>
                                    <td><strong>@kayit.SicilNo</strong></td>
                                    <td>@kayit.PersonelAdi</td>
                                    <td>@kayit.Departman</td>
                                    <td>
                                        @if (kayit.GirisSaati.HasValue)
                                        {
                                            <span class="badge bg-success">@kayit.GirisSaati.Value.ToString("HH:mm")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (kayit.CikisSaati.HasValue)
                                        {
                                            <span class="badge bg-danger">@kayit.CikisSaati.Value.ToString("HH:mm")</span>
                                        }
                                    </td>
                                    <td>
                                        <i class="fas fa-user-shield text-primary me-1"></i>
                                        @kayit.GirisYapanKullanici
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @kayit.GirisZamani.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        <small>@(kayit.Sebep ?? "-")</small>
                                    </td>
                                    <td>
                                        @if (kayit.OnayDurumu == "Onaylandı")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Onaylandı
                                            </span>
                                        }
                                        else if (kayit.OnayDurumu == "Beklemede")
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock me-1"></i>Beklemede
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Reddedildi
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (kayit.OnayDurumu == "Beklemede")
                                        {
                                            <button class="btn btn-sm btn-success"
                                                    onclick="onaylaKayit(@kayit.Id)"
                                                    title="Onayla">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger"
                                                    onclick="reddetKayit(@kayit.Id)"
                                                    title="Reddet">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-info"
                                                    onclick="detayGoster(@kayit.Id)"
                                                    title="Detay">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Kullanıcı Bazlı İstatistik -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-bar me-2"></i>Kullanıcı Bazında Elle Giriş İstatistiği
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="kullaniciChart" height="100"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Seçilen kriterlere uygun elle giriş kaydı bulunamadı.
        </div>
    }
</div>

<!-- Email Modal -->
<div class="modal fade" id="emailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Raporu E-posta ile Gönder</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">E-posta Adresi</label>
                    <input type="email" class="form-control" id="emailAddress" placeholder="ornek@sirket.com">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="sendEmail()">Gönder</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        $(document).ready(function() {
            $('#elleGirisTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json' },
                order: [[0, 'desc'], [7, 'desc']]
            });

        @if (Model != null && Model.Any())
        {
            var kullaniciStats = @Html.Raw(Json.Serialize(
                Model.GroupBy(e => e.GirisYapanKullanici)
                     .Select(g => new { Kullanici = g.Key, Sayi = g.Count() })
                     .OrderByDescending(x => x.Sayi)
            ));

            <text>
                    new Chart(document.getElementById('kullaniciChart'), {
                        type: 'horizontalBar',
                        data: {
                            labels: kullaniciStats.map(x => x.Kullanici),
                            datasets: [{
                                label: 'Elle Giriş Sayısı',
                                data: kullaniciStats.map(x => x.Sayi),
                                backgroundColor: 'rgba(23, 162, 184, 0.8)',
                                borderColor: 'rgba(23, 162, 184, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            indexAxis: 'y',
                            responsive: true,
                            scales: {
                                x: { beginAtZero: true }
                            }
                        }
                    });
            </text>
        }
        });

        function exportToExcel() {
            const wb = XLSX.utils.table_to_book(document.getElementById('elleGirisTable'));
            XLSX.writeFile(wb, 'ElleGirisRaporu_' + new Date().toISOString().slice(0,10) + '.xlsx');
        }

        function exportToPDF() {
            window.print();
        }

        function sendEmail() {
            const email = document.getElementById('emailAddress').value;
            if (!email) {
                alert('Lütfen e-posta adresi girin');
                return;
            }
            alert('E-posta gönderme özelliği yakında eklenecek');
            $('#emailModal').modal('hide');
        }

        function onaylaKayit(id) {
            if (confirm('Bu kaydı onaylamak istediğinizden emin misiniz?')) {
                // AJAX ile onaylama işlemi
                $.post('/GirisCikis/Onayla', { id: id }, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Onaylama işlemi başarısız: ' + response.message);
                    }
                });
            }
        }

        function reddetKayit(id) {
            if (confirm('Bu kaydı reddetmek istediğinizden emin misiniz?')) {
                // AJAX ile reddetme işlemi
                $.post('/GirisCikis/Reddet', { id: id }, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Reddetme işlemi başarısız: ' + response.message);
                    }
                });
            }
        }

        function detayGoster(id) {
            // Detay modal'ı aç
            window.location.href = '/GirisCikis/Details/' + id;
        }
    </script>
}

<style>
    @@media print {
        .report-filter-card, .btn-group, .sidebar, .navbar {
            display: none !important;
        }

        .container-fluid {
            padding: 0;
        }
    }

    .table-warning {
        background-color: rgba(255, 193, 7, 0.1);
    }
</style>