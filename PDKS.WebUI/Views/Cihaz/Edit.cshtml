@model PDKS.Business.DTOs.CihazUpdateDTO
@{
    ViewData["Title"] = "Cihaz Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Cihaz Düzenle
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CihazAdi" class="form-label">
                                    <i class="fas fa-desktop me-1"></i>Cihaz Adı
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CihazAdi" class="form-control" />
                                <span asp-validation-for="CihazAdi" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="IPAdres" class="form-label">
                                    <i class="fas fa-network-wired me-1"></i>IP Adresi
                                </label>
                                <input asp-for="IPAdres" class="form-control" />
                                <span asp-validation-for="IPAdres" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Lokasyon" class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>Lokasyon
                            </label>
                            <input asp-for="Lokasyon" class="form-control" />
                            <span asp-validation-for="Lokasyon" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Durum" class="form-check-input" type="checkbox" />
                                <label asp-for="Durum" class="form-check-label">
                                    Cihaz Aktif
                                </label>
                            </div>
                            <small class="text-muted">
                                Pasif cihazlar sistemde görünür ancak okuma yapamaz.
                            </small>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Dikkat:</strong> Cihaz bilgilerini değiştirmek mevcut kayıtları etkilemez.
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <div>
                                <a asp-action="Loglar" asp-route-id="@Model.Id" class="btn btn-outline-info me-2">
                                    <i class="fas fa-list me-2"></i>Loglar
                                </a>
                                <button type="submit" class="btn btn-warning px-4">
                                    <i class="fas fa-save me-2"></i>Güncelle
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}