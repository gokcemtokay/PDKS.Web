@{
    ViewData["Title"] = "Otomatik Mail Gönderimi";
}

<div class="container-fluid">
    <!-- Başlık -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2>
                        <i class="fas fa-envelope-open-text text-primary"></i>
                        Otomatik Mail Gönderimi
                    </h2>
                    <p class="text-muted">Raporları otomatik olarak belirlenen saatlerde e-posta ile gönderin</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <!-- Yeni Zamanlanmış Rapor Ekle -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-plus-circle me-2"></i>Yeni Zamanlanmış Rapor Ekle
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="CreateScheduledReport" method="post">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Rapor Türü</label>
                        <select name="ReportType" class="form-select" required>
                            <option value="">Rapor Seçin</option>
                            <option value="GunlukGirisCikis">Günlük Giriş-Çıkış Raporu</option>
                            <option value="GenelGecKalanlar">Geç Kalanlar Raporu</option>
                            <option value="Devamsizlar">Devamsızlar Raporu</option>
                            <option value="MesaiyeKalanlar">Fazla Mesai Raporu</option>
                            <option value="IzinliPersoneller">İzinli Personel Raporu</option>
                            <option value="GenelMaasBordrosu">Aylık Maaş Bordrosu</option>
                            <option value="AylikOzet">Aylık Özet Rapor</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">E-posta Adresi</label>
                        <input type="email" name="RecipientEmail" class="form-control"
                               placeholder="ornek@sirket.com" required />
                        <small class="text-muted">Birden fazla adres için virgülle ayırın</small>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Gönderim Saati</label>
                        <input type="time" name="SendTime" class="form-control"
                               value="09:00" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="form-label">Gönderim Günleri</label>
                        <div class="d-flex gap-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SendDays" value="1" id="monday">
                                <label class="form-check-label" for="monday">Pazartesi</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SendDays" value="2" id="tuesday">
                                <label class="form-check-label" for="tuesday">Salı</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SendDays" value="3" id="wednesday">
                                <label class="form-check-label" for="wednesday">Çarşamba</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SendDays" value="4" id="thursday">
                                <label class="form-check-label" for="thursday">Perşembe</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SendDays" value="5" id="friday">
                                <label class="form-check-label" for="friday">Cuma</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Durum</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="IsActive"
                                   id="isActive" checked>
                            <label class="form-check-label" for="isActive">
                                Aktif
                            </label>
                        </div>
                    </div>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Mevcut Zamanlanmış Raporlar -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Zamanlanmış Raporlar
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Rapor Türü</th>
                            <th>E-posta</th>
                            <th>Gönderim Saati</th>
                            <th>Günler</th>
                            <th>Durum</th>
                            <th>Oluşturan</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <i class="fas fa-file-alt text-primary me-2"></i>
                                Günlük Giriş-Çıkış Raporu
                            </td>
                            <td>yonetim@sirket.com</td>
                            <td><strong>09:00</strong></td>
                            <td>
                                <span class="badge bg-secondary">Pt</span>
                                <span class="badge bg-secondary">Sa</span>
                                <span class="badge bg-secondary">Ça</span>
                                <span class="badge bg-secondary">Pe</span>
                                <span class="badge bg-secondary">Cu</span>
                            </td>
                            <td>
                                <span class="badge bg-success">Aktif</span>
                            </td>
                            <td>admin</td>
                            <td>
                                <button class="btn btn-sm btn-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <form asp-action="DeleteScheduledReport" method="post"
                                      class="d-inline" onsubmit="return confirm('Silmek istediğinizden emin misiniz?')">
                                    <input type="hidden" name="id" value="1" />
                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <i class="fas fa-file-alt text-warning me-2"></i>
                                Geç Kalanlar Raporu
                            </td>
                            <td>ik@sirket.com</td>
                            <td><strong>17:00</strong></td>
                            <td>
                                <span class="badge bg-secondary">Cu</span>
                            </td>
                            <td>
                                <span class="badge bg-success">Aktif</span>
                            </td>
                            <td>admin</td>
                            <td>
                                <button class="btn btn-sm btn-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <form asp-action="DeleteScheduledReport" method="post"
                                      class="d-inline" onsubmit="return confirm('Silmek istediğinizden emin misiniz?')">
                                    <input type="hidden" name="id" value="2" />
                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <i class="fas fa-file-alt text-success me-2"></i>
                                Aylık Maaş Bordrosu
                            </td>
                            <td>muhasebe@sirket.com</td>
                            <td><strong>08:00</strong></td>
                            <td>
                                <span class="badge bg-info">Her Ayın 1'i</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">Pasif</span>
                            </td>
                            <td>admin</td>
                            <td>
                                <button class="btn btn-sm btn-warning" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <form asp-action="DeleteScheduledReport" method="post"
                                      class="d-inline" onsubmit="return confirm('Silmek istediğinizden emin misiniz?')">
                                    <input type="hidden" name="id" value="3" />
                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Mail Ayarları Kartı -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-cog me-2"></i>E-posta Sunucu Ayarları
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Bilgi:</strong> E-posta ayarlarını appsettings.json dosyasından yapılandırabilirsiniz.
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>SMTP Sunucu:</strong> smtp.gmail.com</p>
                    <p><strong>Port:</strong> 587</p>
                    <p><strong>SSL:</strong> Aktif</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Gönderen Adres:</strong> pdks@sirket.com</p>
                    <p><strong>Gönderen Adı:</strong> PDKS Sistemi</p>
                    <p><strong>Durum:</strong> <span class="badge bg-success">Bağlı</span></p>
                </div>
            </div>
            <div class="text-end mt-3">
                <button class="btn btn-primary" onclick="testEmail()">
                    <i class="fas fa-paper-plane me-2"></i>Test E-postası Gönder
                </button>
            </div>
        </div>
    </div>

    <!-- Gönderim Geçmişi -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-history me-2"></i>Son Gönderimler
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Tarih/Saat</th>
                            <th>Rapor</th>
                            <th>Alıcı</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@DateTime.Now.AddMinutes(-10).ToString("dd.MM.yyyy HH:mm")</td>
                            <td>Günlük Giriş-Çıkış</td>
                            <td>yonetim@sirket.com</td>
                            <td><span class="badge bg-success">Gönderildi</span></td>
                        </tr>
                        <tr>
                            <td>@DateTime.Now.AddHours(-1).ToString("dd.MM.yyyy HH:mm")</td>
                            <td>Geç Kalanlar</td>
                            <td>ik@sirket.com</td>
                            <td><span class="badge bg-success">Gönderildi</span></td>
                        </tr>
                        <tr>
                            <td>@DateTime.Now.AddHours(-2).ToString("dd.MM.yyyy HH:mm")</td>
                            <td>Fazla Mesai</td>
                            <td>yonetim@sirket.com</td>
                            <td><span class="badge bg-danger">Başarısız</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function testEmail() {
            if (confirm('Test e-postası gönderilecek. Devam etmek istiyor musunuz?')) {
                // AJAX ile test maili gönder
                alert('Test e-postası gönderildi. Lütfen gelen kutunuzu kontrol edin.');
            }
        }
    </script>
}