<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PDKS</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h3>
                <i class="far fa-clock"></i>
                <span class="sidebar-text">PDKS</span>
            </h3>
            <button class="btn btn-link text-white d-lg-none p-0" id="sidebarCloseBtn">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="sidebar-profile">
            <div class="text-center">
                <i class="fas fa-user-circle fa-3x mb-2"></i>
                <h6 class="mb-0 sidebar-text">@User.Identity?.Name</h6>
                <small class="sidebar-text">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
            </div>
        </div>

        <ul class="list-unstyled components">
            <li>
                <a asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                    <span class="sidebar-text">Ana Sayfa</span>
                </a>
            </li>
            <li>
                <a asp-controller="Personel" asp-action="Index">
                    <i class="fas fa-users"></i>
                    <span class="sidebar-text">Personeller</span>
                </a>
            </li>
            <li>
                <a asp-controller="Departman" asp-action="Index">
                    <i class="fas fa-building"></i>
                    <span class="sidebar-text">Departmanlar</span>
                </a>
            </li>
            <li>
                <a asp-controller="Vardiya" asp-action="Index">
                    <i class="far fa-clock"></i>
                    <span class="sidebar-text">Vardiyalar</span>
                </a>
            </li>
            <li>
                <a asp-controller="GirisCikis" asp-action="Index">
                    <i class="fas fa-door-open"></i>
                    <span class="sidebar-text">Giriş-Çıkış</span>
                </a>
            </li>
            <li>
                <a asp-controller="Izin" asp-action="Index">
                    <i class="fas fa-calendar-check"></i>
                    <span class="sidebar-text">İzinler</span>
                </a>
            </li>
            <li>
                <a asp-controller="Mesai" asp-action="Index">
                    <i class="fas fa-business-time"></i>
                    <span class="sidebar-text">Mesai</span>
                </a>
            </li>

<!-- RAPORLAR DROPDOWN - DÜZELTİLDİ -->
<li>
    <a href="#" class="dropdown-toggle" data-submenu="raporlar">
        <i class="fas fa-chart-line"></i>
        <span class="sidebar-text">Raporlar</span>
        <i class="fas fa-chevron-down ms-auto sidebar-text dropdown-arrow"></i>
    </a>
    <ul class="submenu" id="raporlarSubmenu" style="display: none;">
        <li>
            <a asp-controller="Rapor" asp-action="Index">
                <i class="fas fa-th-large"></i>
                <span class="sidebar-text">Rapor Merkezi</span>
            </a>
        </li>
        <li class="submenu-divider"></li>
        <li class="submenu-header">Giriş-Çıkış</li>
        <li>
            <a asp-controller="Rapor" asp-action="KisiBazindaGirisCikis">
                <i class="far fa-circle"></i>
                <span class="sidebar-text">Kişi Bazında</span>
            </a>
        </li>
        <li>
            <a asp-controller="Rapor" asp-action="GenelGirisCikis">
                <i class="far fa-circle"></i>
                <span class="sidebar-text">Genel Rapor</span>
            </a>
        </li>
        <li>
            <a asp-controller="Rapor" asp-action="GenelGecKalanlar">
                <i class="far fa-circle"></i>
                <span class="sidebar-text">Geç Kalanlar</span>
            </a>
        </li>
        <li>
            <a asp-controller="Rapor" asp-action="GenelErkenCikanlar">
                <i class="far fa-circle"></i>
                <span class="sidebar-text">Erken Çıkanlar</span>
            </a>
        </li>
        <li class="submenu-divider"></li>
        <li class="submenu-header">Özel Raporlar</li>
        <li>
            <a asp-controller="Rapor" asp-action="MesaiyeKalanlar">
                <i class="far fa-circle"></i>
                <span class="sidebar-text">Fazla Mesai</span>
            </a>
        </li>
        <li>
            <a asp-controller="Rapor" asp-action="Devamsizlar">
                <i class="far fa-circle"></i>
                <span class="sidebar-text">Devamsızlar</span>
            </a>
        </li>
        <li>
            <a asp-controller="Rapor" asp-action="IzinliPersoneller">
                <i class="far fa-circle"></i>
                <span class="sidebar-text">İzinli Personel</span>
            </a>
        </li>
        <li class="submenu-divider"></li>
        <li class="submenu-header">Maaş & Bordro</li>
        <li>
            <a asp-controller="Rapor" asp-action="GenelMaasBordrosu">
                <i class="far fa-circle"></i>
                <span class="sidebar-text">Maaş Bordrosu</span>
            </a>
        </li>
        <li>
            <a asp-controller="Rapor" asp-action="AvansListesi">
                <i class="far fa-circle"></i>
                <span class="sidebar-text">Avans Listesi</span>
            </a>
        </li>
        <li>
            <a asp-controller="Rapor" asp-action="PrimListesi">
                <i class="far fa-circle"></i>
                <span class="sidebar-text">Prim Listesi</span>
            </a>
        </li>
    </ul>
</li>

            <!-- YÖNETİM DROPDOWN (Admin Only) -->
            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a href="#" class="dropdown-toggle" data-submenu="yonetim">
                        <i class="fas fa-cog"></i>
                        <span class="sidebar-text">Yönetim</span>
                        <i class="fas fa-chevron-down ms-auto sidebar-text dropdown-arrow"></i>
                    </a>
                    <ul class="submenu" id="yonetimSubmenu" style="display: none;">
                        <li>
                            <a asp-controller="Cihaz" asp-action="Index">
                                <i class="fas fa-desktop"></i>
                                <span class="sidebar-text">Cihazlar</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Kullanici" asp-action="Index">
                                <i class="fas fa-users-cog"></i>
                                <span class="sidebar-text">Kullanıcılar</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Parametre" asp-action="Index">
                                <i class="fas fa-sliders-h"></i>
                                <span class="sidebar-text">Parametreler</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Tatil" asp-action="Index">
                                <i class="fas fa-calendar-alt"></i>
                                <span class="sidebar-text">Tatil Günleri</span>
                            </a>
                        </li>

                                        <li class="submenu-divider"></li>
                <li>
                    <a asp-controller="Settings" asp-action="Index">
                        <i class="fas fa-cogs"></i>
                        <span class="sidebar-text">Sistem Ayarları</span>
                    </a>
                </li>
                    </ul>
                </li>
                <li>
                    <a asp-controller="Log" asp-action="Index">
                        <i class="fas fa-list"></i>
                        <span class="sidebar-text">Sistem Logları</span>
                    </a>
                </li>
            }

            <li>
                <a asp-controller="Bildirim" asp-action="Index">
                    <i class="fas fa-bell"></i>
                    <span class="sidebar-text">Bildirimler</span>
                </a>
            </li>
        </ul>

        <div class="sidebar-footer">
            <form asp-controller="Auth" asp-action="Logout" method="post" class="w-100">
                <button type="submit" class="btn btn-danger w-100">
                    <i class="fas fa-sign-out-alt"></i>
                    <span class="sidebar-text ms-2">Çıkış Yap</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Main Content -->
    <div id="content">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container-fluid">
                <!-- HAMBURGER BUTONU -->
                <button class="btn btn-link text-dark me-2 p-2" id="sidebarToggle" type="button">
                    <i class="fas fa-bars fa-lg"></i>
                </button>

                <a class="navbar-brand" href="#">PDKS Yönetim Sistemi</a>

                <div class="d-flex align-items-center ms-auto">
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="far fa-user"></i>
                            <span class="d-none d-md-inline ms-1">@User.Identity?.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-user me-2"></i>Profil
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-cog me-2"></i>Ayarlar
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <div class="container-fluid p-4">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="footer mt-auto py-3 bg-light border-top">
            <div class="container-fluid text-center">
                <span class="text-muted">&copy; 2025 PDKS - Tüm hakları saklıdır.</span>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>