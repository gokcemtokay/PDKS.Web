<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PDKS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PDKS.WebUI.styles.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <!-- Sidebar Toggle Overlay (Mobil için) -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3>
                    <i class="fas fa-clock me-2"></i>PDKS
                </h3>
                <button class="btn btn-link text-white d-lg-none" id="sidebarCollapseBtn">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="sidebar-profile">
                <div class="text-center">
                    <i class="fas fa-user-circle fa-3x mb-2"></i>
                    <h6 class="mb-0">@User.Identity.Name</h6>
                    <small class="text-muted">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                </div>
            </div>

            <ul class="list-unstyled components">
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home me-2"></i>
                        <span>Ana Sayfa</span>
                    </a>
                </li>

                @if (User.IsInRole("Admin") || User.IsInRole("IK"))
                {
                    <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Personel" ? "active" : "")">
                        <a asp-controller="Personel" asp-action="Index">
                            <i class="fas fa-users me-2"></i>
                            <span>Personeller</span>
                        </a>
                    </li>

                    <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Departman" ? "active" : "")">
                        <a asp-controller="Departman" asp-action="Index">
                            <i class="fas fa-building me-2"></i>
                            <span>Departmanlar</span>
                        </a>
                    </li>

                    <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Vardiya" ? "active" : "")">
                        <a asp-controller="Vardiya" asp-action="Index">
                            <i class="fas fa-clock me-2"></i>
                            <span>Vardiyalar</span>
                        </a>
                    </li>
                }

                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "GirisCikis" ? "active" : "")">
                    <a asp-controller="GirisCikis" asp-action="Index">
                        <i class="fas fa-door-open me-2"></i>
                        <span>Giriş-Çıkış</span>
                    </a>
                </li>

                @if (User.IsInRole("Admin") || User.IsInRole("IK") || User.IsInRole("Yönetici"))
                {
                    <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Izin" ? "active" : "")">
                        <a asp-controller="Izin" asp-action="Index">
                            <i class="fas fa-umbrella-beach me-2"></i>
                            <span>İzinler</span>
                        </a>
                    </li>

                    <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Mesai" ? "active" : "")">
                        <a asp-controller="Mesai" asp-action="Index">
                            <i class="fas fa-business-time me-2"></i>
                            <span>Mesai</span>
                        </a>
                    </li>

                    <li>
                        <a href="#raporlarSubmenu" data-bs-toggle="collapse"
                           class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rapor" ? "" : "collapsed")">
                            <i class="fas fa-chart-bar me-2"></i>
                            <span>Raporlar</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rapor" ? "show" : "")"
                            id="raporlarSubmenu">
                            <li>
                                <a asp-controller="Rapor" asp-action="GunlukRapor">
                                    <i class="fas fa-calendar-day me-2"></i>Günlük Rapor
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Rapor" asp-action="AylikRapor">
                                    <i class="fas fa-calendar-alt me-2"></i>Aylık Rapor
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Rapor" asp-action="PersonelDetay">
                                    <i class="fas fa-user-clock me-2"></i>Personel Detay
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a href="#yonetimSubmenu" data-bs-toggle="collapse"
                           class="@(new[] { "Cihaz", "Kullanici", "Parametre", "Tatil" }.Contains(ViewContext.RouteData.Values["Controller"]?.ToString()) ? "" : "collapsed")">
                            <i class="fas fa-cog me-2"></i>
                            <span>Yönetim</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <ul class="collapse list-unstyled @(new[] { "Cihaz", "Kullanici", "Parametre", "Tatil" }.Contains(ViewContext.RouteData.Values["Controller"]?.ToString()) ? "show" : "")"
                            id="yonetimSubmenu">
                            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cihaz" ? "active" : "")">
                                <a asp-controller="Cihaz" asp-action="Index">
                                    <i class="fas fa-desktop me-2"></i>Cihazlar
                                </a>
                            </li>
                            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Kullanici" ? "active" : "")">
                                <a asp-controller="Kullanici" asp-action="Index">
                                    <i class="fas fa-users-cog me-2"></i>Kullanıcılar
                                </a>
                            </li>
                            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Parametre" ? "active" : "")">
                                <a asp-controller="Parametre" asp-action="Index">
                                    <i class="fas fa-sliders-h me-2"></i>Parametreler
                                </a>
                            </li>
                            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tatil" ? "active" : "")">
                                <a asp-controller="Tatil" asp-action="Index">
                                    <i class="fas fa-calendar-alt me-2"></i>Tatil Günleri
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Log" ? "active" : "")">
                        <a asp-controller="Log" asp-action="Index">
                            <i class="fas fa-list me-2"></i>
                            <span>Sistem Logları</span>
                        </a>
                    </li>
                }

                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Bildirim" ? "active" : "")">
                    <a asp-controller="Bildirim" asp-action="Index">
                        <i class="fas fa-bell me-2"></i>
                        <span>Bildirimler</span>
                        @if (ViewBag.OkunmamisBildirimler != null && ViewBag.OkunmamisBildirimler > 0)
                        {
                            <span class="badge bg-danger ms-2">@ViewBag.OkunmamisBildirimler</span>
                        }
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger btn-sm w-100">
                    <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                </a>
            </div>
        </nav>

        <!-- Main Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
                <div class="container-fluid">
                    <button type="button" id="sidebarToggle" class="btn btn-primary">
                        <i class="fas fa-bars"></i>
                    </button>

                    <span class="navbar-brand mb-0 h1 ms-3">
                        @ViewData["Title"]
                    </span>

                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <button class="btn btn-link text-dark dropdown-toggle" type="button"
                                    id="userDropdown" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle fa-lg me-2"></i>
                                @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-user me-2"></i>Profilim
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-cog me-2"></i>Ayarlar
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <main role="main" class="container-fluid px-4">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="footer mt-5 py-3 bg-light">
                <div class="container-fluid text-center">
                    <span class="text-muted">
                        &copy; @DateTime.Now.Year - PDKS Sistemi - Tüm hakları saklıdır.
                    </span>
                </div>
            </footer>
        </div>
    }
    else
    {
        <main role="main">
            @RenderBody()
        </main>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>