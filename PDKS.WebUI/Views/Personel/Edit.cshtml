@* ============================================ *@
@* Personel/Edit.cshtml *@

@model PDKS.Business.DTOs.PersonelUpdateDTO
@{
    ViewData["Title"] = "Personel Düzenle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Personel Düzenle</h3>
                </div>
                <form asp-action="Edit" method="post">
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TcKimlikNo"></label>
                                    <input asp-for="TcKimlikNo" class="form-control" />
                                    <span asp-validation-for="TcKimlikNo" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SicilNo"></label>
                                    <input asp-for="SicilNo" class="form-control" />
                                    <span asp-validation-for="SicilNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AdSoyad"></label>
                                    <input asp-for="AdSoyad" class="form-control" />
                                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SicilNo"></label>
                                    <input asp-for="SicilNo" class="form-control" />
                                    <span asp-validation-for="SicilNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="DepartmanId" class="form-label">Departman</label>
                                <select asp-for="DepartmanId" class="form-select" asp-items="ViewBag.Departmanlar">
                                    <option value="">Seçiniz...</option>
                                </select>
                                <span asp-validation-for="DepartmanId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Gorev"></label>
                                    <input asp-for="Gorev" class="form-control" />
                                    <span asp-validation-for="Gorev" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="VardiyaId" class="form-label">Vardiya</label>
                            <select asp-for="VardiyaId" class="form-select" asp-items="ViewBag.Vardiyalar">
                                <option value="">Seçiniz...</option>
                            </select>
                            <span asp-validation-for="VardiyaId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="GirisTarihi" class="form-label">İşe Giriş Tarihi <span class="text-danger">*</span></label>
                            <input asp-for="GirisTarihi" type="date" class="form-control">
                            <span asp-validation-for="GirisTarihi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="CikisTarihi" class="form-label">İşten Çıkış Tarihi</label>
                            <input asp-for="CikisTarihi" type="date" class="form-control">
                            <span asp-validation-for="CikisTarihi" class="text-danger"></span>
                            <small class="form-text text-muted">Sadece işten ayrılanlar için</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Durum</label>
                            <div class="form-check form-switch">
                                <input asp-for="Durum" class="form-check-input" type="checkbox" style="transform: scale(1.5);">
                                <label asp-for="Durum" class="form-check-label ms-2">
                                    <span class="badge bg-success" id="durumBadge">Aktif</span>
                                </label>
                            </div>
                        </div>
                    </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Telefon" class="form-label">Telefon</label>
                                <input asp-for="Telefon" class="form-control" placeholder="05001234567">
                                <span asp-validation-for="Telefon" class="text-danger"></span>
                            </div>
                        </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Maas" class="form-label">Maaş (₺)</label>
                            <input asp-for="Maas" type="number" step="0.01" class="form-control" placeholder="0.00">
                            <span asp-validation-for="Maas" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="AvansLimiti" class="form-label">Avans Limiti (₺)</label>
                            <input asp-for="AvansLimiti" type="number" step="0.01" class="form-control" placeholder="0.00">
                            <span asp-validation-for="AvansLimiti" class="text-danger"></span>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Update durum badge
        $('#Durum').change(function() {
            if ($(this).is(':checked')) {
                $('#durumBadge').removeClass('bg-danger').addClass('bg-success').text('Aktif');
            } else {
                $('#durumBadge').removeClass('bg-success').addClass('bg-danger').text('Pasif');
            }
        });

        // Initialize badge
        $(document).ready(function() {
            if ($('#Durum').is(':checked')) {
                $('#durumBadge').removeClass('bg-danger').addClass('bg-success').text('Aktif');
            } else {
                $('#durumBadge').removeClass('bg-success').addClass('bg-danger').text('Pasif');
            }
        });
    </script>
}