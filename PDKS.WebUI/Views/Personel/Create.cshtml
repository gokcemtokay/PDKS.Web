@model PDKS.Business.DTOs.PersonelCreateDTO
@{
    ViewData["Title"] = "Yeni Personel Ekle";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-user-plus me-2"></i> Yeni Personel Ekle
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="TcKimlikNo" class="form-label">TC Kimlik No <span class="text-danger">*</span></label>
                            <input asp-for="TcKimlikNo" class="form-control" placeholder="112345678901">
                            <span asp-validation-for="TcKimlikNo" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="AdSoyad" class="form-label">Ad Soyad <span class="text-danger">*</span></label>
                            <input asp-for="AdSoyad" class="form-control" placeholder="Örn: Ahmet Yılmaz">
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="SicilNo" class="form-label">Sicil No <span class="text-danger">*</span></label>
                            <input asp-for="SicilNo" class="form-control" placeholder="Örn: PER001">
                            <span asp-validation-for="SicilNo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ornek@sirket.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Telefon" class="form-label">Telefon</label>
                            <input asp-for="Telefon" class="form-control" placeholder="05001234567">
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DepartmanId" class="form-label">Departman</label>
                            <select asp-for="DepartmanId" class="form-select" asp-items="ViewBag.Departmanlar">
                                <option value="">Seçiniz...</option>
                            </select>
                            <span asp-validation-for="DepartmanId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Gorev" class="form-label">Görev</label>
                            <select asp-for="Gorev" class="form-select" asp-items="ViewBag.Gorevler">
                                <option value="">Seçiniz...</option>
                            </select>
                            <span asp-validation-for="Gorev" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="VardiyaId" class="form-label">Vardiya</label>
                            <select asp-for="VardiyaId" class="form-select" asp-items="ViewBag.Vardiyalar">
                                <option value="">Seçiniz...</option>
                            </select>
                            <span asp-validation-for="VardiyaId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="GirisTarihi" class="form-label">İşe Giriş Tarihi <span class="text-danger">*</span></label>
                            <input asp-for="GirisTarihi" type="date" class="form-control">
                            <span asp-validation-for="GirisTarihi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Maas" class="form-label">Maaş (₺)</label>
                            <input asp-for="Maas" type="number" step="0.01" class="form-control" placeholder="0.00">
                            <span asp-validation-for="Maas" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="AvansLimiti" class="form-label">Avans Limiti (₺)</label>
                            <input asp-for="AvansLimiti" type="number" step="0.01" class="form-control" placeholder="0.00">
                            <span asp-validation-for="AvansLimiti" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Durum" class="form-check-input" type="checkbox" checked>
                            <label asp-for="Durum" class="form-check-label">Aktif</label>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}