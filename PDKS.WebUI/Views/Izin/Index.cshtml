@model IEnumerable<PDKS.Business.DTOs.IzinListDTO>

@{
    ViewData["Title"] = "İzin Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">İzin Talepleri</h3>
                    <div class="card-tools">
                        <a asp-action="Create" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> Yeni İzin Talebi
                        </a>
                        @if (User.IsInRole("Admin") || User.IsInRole("IK") || User.IsInRole("Yönetici"))
                        {
                            <a asp-action="Pending" class="btn btn-warning btn-sm">
                                <i class="fas fa-clock"></i> Bekleyen İzinler
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            @TempData["Error"]
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <table class="table table-bordered table-striped" id="izinTable">
                            <thead>
                                <tr>
                                    <th>Personel</th>
                                    <th>İzin Tipi</th>
                                    <th>Başlangıç</th>
                                    <th>Bitiş</th>
                                    <th>Gün Sayısı</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PersonelAdi</td>
                                        <td><span class="badge badge-info">@item.IzinTipi</span></td>
                                        <td>@item.BaslangicTarihi.ToString("dd.MM.yyyy")</td>
                                        <td>@item.BitisTarihi.ToString("dd.MM.yyyy")</td>
                                        <td><span class="badge badge-primary">@item.GunSayisi</span></td>
                                        <td>
                                            @switch (item.OnayDurumu)
                                            {
                                                case "Beklemede":
                                                    <span class="badge badge-warning">Beklemede</span>
                                                    break;
                                                case "Onaylandı":
                                                    <span class="badge badge-success">Onaylandı</span>
                                                    break;
                                                case "Reddedildi":
                                                    <span class="badge badge-danger">Reddedildi</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (item.OnayDurumu == "Beklemede")
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (User.IsInRole("Admin") || User.IsInRole("IK") || User.IsInRole("Yönetici"))
                                                    {
                                                        <form asp-action="Approve" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                            <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('İzin talebini onaylamak istediğinizden emin misiniz?')">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                }
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
                            <p class="text-muted">Henüz izin kaydı bulunmamaktadır.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> İlk İzin Talebini Oluştur
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
        @if (Model.Any())
        {
            <text>
                    $("#izinTable").DataTable({
                        "responsive": true,
                        "lengthChange": false,
                        "autoWidth": false,
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                        }
                    });
            </text>
        }
        });
    </script>
}