@model PDKS.Business.DTOs.IzinDetailDTO

@{
    ViewData["Title"] = "İzin Detayı";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">İzin Talebi Detayı</h3>
                    <div class="card-tools">
                        @if (Model.OnayDurumu == "Beklemede")
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Personel:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.PersonelAdi</strong> (@Model.PersonelSicilNo)
                        </dd>

                        <dt class="col-sm-4">İzin Tipi:</dt>
                        <dd class="col-sm-8">
                            <span class="badge badge-info badge-lg">@Model.IzinTipi</span>
                        </dd>

                        <dt class="col-sm-4">Başlangıç Tarihi:</dt>
                        <dd class="col-sm-8">@Model.BaslangicTarihi.ToString("dd MMMM yyyy dddd")</dd>

                        <dt class="col-sm-4">Bitiş Tarihi:</dt>
                        <dd class="col-sm-8">@Model.BitisTarihi.ToString("dd MMMM yyyy dddd")</dd>

                        <dt class="col-sm-4">İzin Süresi:</dt>
                        <dd class="col-sm-8">
                            <span class="badge badge-primary badge-lg">@Model.GunSayisi gün</span>
                        </dd>

                        <dt class="col-sm-4">Durum:</dt>
                        <dd class="col-sm-8">
                            @switch (Model.OnayDurumu)
                            {
                                case "Beklemede":
                                    <span class="badge badge-warning badge-lg">Onay Bekliyor</span>
                                    break;
                                case "Onaylandı":
                                    <span class="badge badge-success badge-lg">Onaylandı</span>
                                    break;
                                case "Reddedildi":
                                    <span class="badge badge-danger badge-lg">Reddedildi</span>
                                    break;
                            }
                        </dd>

                        @if (Model.OnayDurumu != "Beklemede")
                        {
                            <dt class="col-sm-4">Onaylayan:</dt>
                            <dd class="col-sm-8">@(Model.OnaylayanKullaniciAdi ?? "-")</dd>

                            <dt class="col-sm-4">Onay Tarihi:</dt>
                            <dd class="col-sm-8">
                                @(Model.OnayTarihi.HasValue ? Model.OnayTarihi.Value.ToString("dd.MM.yyyy HH:mm") : "-")
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.RedNedeni))
                        {
                            <dt class="col-sm-4">Red Nedeni:</dt>
                            <dd class="col-sm-8">
                                <div class="alert alert-danger mb-0">
                                    @Model.RedNedeni
                                </div>
                            </dd>
                        }

                        <dt class="col-sm-4">Talep Tarihi:</dt>
                        <dd class="col-sm-8">@Model.TalepTarihi.ToString("dd.MM.yyyy HH:mm")</dd>

                        @if (!string.IsNullOrEmpty(Model.Aciklama))
                        {
                            <dt class="col-sm-4">Açıklama:</dt>
                            <dd class="col-sm-8">@Model.Aciklama</dd>
                        }
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>

                    @if (Model.OnayDurumu == "Beklemede")
                    {
                        @if (User.IsInRole("Admin") || User.IsInRole("IK") || User.IsInRole("Yönetici"))
                        {
                            <form asp-action="Approve" asp-route-id="@Model.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-success" onclick="return confirm('İzin talebini onaylamak istediğinizden emin misiniz?')">
                                    <i class="fas fa-check"></i> Onayla
                                </button>
                            </form>

                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#rejectModal">
                                <i class="fas fa-times"></i> Reddet
                            </button>
                        }

                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Red Nedeni Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="Reject" asp-route-id="@Model.Id" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">İzin Talebini Reddet</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Red Nedeni *</label>
                        <textarea name="redNedeni" class="form-control" rows="3" required placeholder="Red nedenini açıklayınız..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Reddet</button>
                </div>
            </form>
        </div>
    </div>
</div>