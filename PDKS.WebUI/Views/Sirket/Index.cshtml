@* PDKS.WebUI/Views/Sirket/Index.cshtml *@
@model List<PDKS.Business.DTOs.SirketListDTO>
@{
    ViewData["Title"] = "Şirket Yönetimi";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-building me-2"></i>Şirketler</h2>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Yeni Şirket Ekle
                    </a>
                }
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Şirket Listesi</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="sirketTable">
                            <thead>
                                <tr>
                                    <th>Ünvan</th>
                                    <th>Vergi No</th>
                                    <th>Telefon</th>
                                    <th>Email</th>
                                    <th>İl</th>
                                    <th>Ana Şirket</th>
                                    <th>Personel</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var sirket in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@sirket.Unvan</strong>
                                                @if (sirket.AnaSirket)
                                                {
                                                    <span class="badge bg-primary ms-2">Ana Şirket</span>
                                                }
                                            </td>
                                            <td>@sirket.VergiNo</td>
                                            <td>@sirket.Telefon</td>
                                            <td>@sirket.Email</td>
                                            <td>@sirket.Il</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(sirket.AnaSirketAdi))
                                                {
                                                    <span class="text-muted">@sirket.AnaSirketAdi</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@sirket.PersonelSayisi</span>
                                            </td>
                                            <td>
                                                @if (sirket.Aktif)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@sirket.Id"
                                                       class="btn btn-info" title="Detay">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@sirket.Id"
                                                           class="btn btn-warning" title="Düzenle">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-danger"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#deleteModal"
                                                                data-id="@sirket.Id"
                                                                data-name="@sirket.Unvan"
                                                                title="Sil">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted py-4">
                                            <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                            Henüz kayıtlı şirket bulunmamaktadır.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Şirketi Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteSirketName"></strong> şirketini silmek istediğinize emin misiniz?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Bu işlem geri alınamaz!
                </div>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Evet, Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable
            $('#sirketTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                order: [[0, 'asc']]
            });

            // Delete modal
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var sirketId = button.data('id');
                var sirketName = button.data('name');

                $('#deleteSirketName').text(sirketName);
                $('#deleteForm').attr('action', '@Url.Action("Delete", "Sirket")/' + sirketId);
            });
        });
    </script>
}