@* PDKS.WebUI/Views/Sirket/BagliSirketler.cshtml *@
@model List<PDKS.Business.DTOs.SirketListDTO>
@{
    ViewData["Title"] = "Bağlı Şirketler";
    var anaSirketId = ViewBag.AnaSirketId;
    var anaSirketAdi = ViewBag.AnaSirketAdi;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="fas fa-sitemap me-2"></i>Bağlı Şirketler</h2>
                    <p class="text-muted">Ana Şirket: <strong>@anaSirketAdi</strong></p>
                </div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Geri
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Ünvan</th>
                                    <th>Vergi No</th>
                                    <th>Telefon</th>
                                    <th>Email</th>
                                    <th>Personel Sayısı</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var sirket in Model)
                                    {
                                        <tr>
                                            <td><strong>@sirket.Unvan</strong></td>
                                            <td>@sirket.VergiNo</td>
                                            <td>@sirket.Telefon</td>
                                            <td>@sirket.Email</td>
                                            <td><span class="badge bg-info">@sirket.PersonelSayisi</span></td>
                                            <td>
                                                @if (sirket.Aktif)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@sirket.Id"
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">
                                            Bu şirkete bağlı şirket bulunmamaktadır.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>